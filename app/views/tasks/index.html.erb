<div class="container">
  <h2>My Tasks</h2>

  <div id="task-card" class="p-2 d-flex">
    <ul>
    <% @tasks.each do |task| %>
    <li>
      <%= check_box_tag(task.title, task.details, task.completed)%>
      <%= link_to task.title, task_path(task) %>
      <%= link_to task_path(task),
        method: :delete,
        data: { confirm: "Are you sure you want to delete this task?" } do %>
        <i class='far fa-trash-alt pl-2'></i>
      <% end %>
      </li>
    <% end %>
    </ul>
  </div>
<p><%= link_to "+ Add a new task", new_task_path %></p>
</div>

